---
import Footer from '../components/Footer.astro';
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex,nofollow"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons&display=swap&text=star" rel="stylesheet">
    <title>{title}</title>
    <script defer src="/_vercel/insights/script.js"></script>
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, transparent 60%);
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #F6F6F6;
  }
  body {
    margin: 0;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }

  .site-container {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  .section-title {
    font-size: 2rem;
    text-align: center;
    font-weight: bold;
  }
  .section-title + *{
    margin-top: 1.5rem;
  }
  .radius-underline {
    display: inline-block;
    position: relative;
    z-index: 1;
  }
  .radius-underline::before {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 0.5rem;
    bottom: 0;
    background-image: var(--accent-gradient);
    clip-path: polygon(0 0,5% 100%,100% 0);
    background-size: 200%;
    z-index: -1;
    opacity: .7;
  }

  .nm-flat-gray-200 {
    background: #F6F6F6;
    box-shadow: 0.2em 0.2em 0.4em #c8c8c8, -0.2em -0.2em 0.4em #fff;
  }
</style>
