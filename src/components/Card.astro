---
import { Icon } from 'astro-icon'
export interface Props {
  icon: string;
  title: string;
  subTitle: string;
  body: string;
}

const { icon, title, subTitle, body } = Astro.props;
---

<li class="link-card">
  <Icon name={icon} class="icon" />
  <h4>
    {title}
  </h4>
  <h5>
    - {subTitle} -
  </h5>
  <p>
    {body}
  </p>
</li>

<style>
  .link-card {
    list-style: none;
    padding: 0.15rem;
    border-radius: 0.5rem;
    background-position: 100%;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
    line-height: 1.4;
    padding: 1rem 1.3rem;
    color: #111;
    background-color: white;
  }
  .icon {
    width: 2rem;
    height: 2rem;
    color: rgb(var(--accent));
    display: block;
    margin-inline: auto;
  }
  h4, h5 {
    text-align: center;
  }
  h4 {
    margin-top: .5rem;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  h3 {
    font-size: 1rem;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }
</style>
